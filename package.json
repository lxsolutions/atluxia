{
  "name": "atluxia",
  "version": "1.0.0",
  "description": "Atluxia - Nomad platform + transparent social layer",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:lite": "cross-env ATLUXIA_PROFILE=lite turbo run dev --parallel --filter=@atluxia/nomad-web --filter=@atluxia/polyverse-web --filter=@atluxia/immigration --filter=@atluxia/opengrid",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.8",
    "typescript": "^5.5",
    "vite": "^7.1.9"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
