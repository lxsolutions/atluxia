# Live Stream Service Configuration

# Service Configuration
PORT=3007
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/polyverse

# NATS
NATS_URL=nats://nats:4222

# Streaming Configuration
RTMP_INGEST_URL=rtmp://localhost:1935/live
PLAYBACK_BASE_URL=http://localhost:3007

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
MAX_CHAT_MESSAGE_LENGTH=500
MAX_CONNECTIONS_PER_STREAM=1000

# Feature Flags
ENABLE_LIVE_STREAMING=true
ENABLE_CHAT_MODERATION=true
ENABLE_DVR=true

# Logging
LOG_LEVEL=info