# Communities Service Configuration

# Service Configuration
PORT=3009
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/polyverse

# NATS
NATS_URL=nats://nats:4222

# Community Configuration
MAX_COMMUNITIES_PER_USER=10
MAX_MEMBERS_PER_COMMUNITY=10000
DEFAULT_COMMUNITY_RULES=Be respectful,No spam,Stay on topic

# Moderation
MODERATION_LOG_RETENTION_DAYS=90
AUTO_MODERATION_ENABLED=false

# Feature Flags
ENABLE_COMMUNITY_CREATION=true
ENABLE_MODERATION_TOOLS=true
ENABLE_TRANSPARENCY_LOGS=true

# Logging
LOG_LEVEL=info