# Discovery Service Configuration

# Service Configuration
PORT=3008
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/polyverse

# NATS
NATS_URL=nats://nats:4222

# Recommendation Configuration
MAX_BUNDLES_PER_REQUEST=5
MAX_ITEMS_PER_BUNDLE=10
DEFAULT_BUNDLE_TYPES=trending,personalized,voice_balance

# Analytics
ANALYTICS_RETENTION_DAYS=90
EXPOSURE_TRACKING_ENABLED=true

# Feature Flags
ENABLE_VOICE_BALANCE=true
ENABLE_PERSONALIZATION=true
ENABLE_TRANSPARENCY_EXPLANATIONS=true

# Logging
LOG_LEVEL=info