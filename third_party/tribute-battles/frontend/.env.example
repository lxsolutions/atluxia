








# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-oauth-client-id

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Environment
NODE_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_STREAMING=false
NEXT_PUBLIC_ENABLE_CRYPTO_PAYMENTS=false
NEXT_PUBLIC_ENABLE_TOURNAMENTS=false

# Social Media
NEXT_PUBLIC_TWITCH_CLIENT_ID=your-twitch-client-id
NEXT_PUBLIC_YOUTUBE_API_KEY=your-youtube-api-key

# Performance
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_API_TIMEOUT=10000

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Development
NEXT_PUBLIC_DEBUG=true

# Production (set these in production environment)
NEXT_PUBLIC_PRODUCTION=false
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# CDN Configuration
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_ASSET_PREFIX=

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de

# Security
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_CSP_POLICY=

# Third-party Services
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Game Configuration
NEXT_PUBLIC_DEFAULT_GAME=age2
NEXT_PUBLIC_MAX_PLAYERS_PER_GAME=4

# Payment Configuration
NEXT_PUBLIC_PAYMENT_PROVIDERS=stripe,crypto
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# Streaming Configuration
NEXT_PUBLIC_EMBED_TWITCH=true
NEXT_PUBLIC_EMBED_YOUTUBE=true

# Social Configuration
NEXT_PUBLIC_DISCORD_INVITE=your-discord-invite
NEXT_PUBLIC_TWITCH_CHANNEL=your-twitch-channel

# Legal
NEXT_PUBLIC_PRIVACY_URL=/privacy
NEXT_PUBLIC_TERMS_URL=/terms
NEXT_PUBLIC_LEGAL_DISCLAIMER=/legal

# Beta Features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_BETA_FEATURES=

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ERROR_SAMPLE_RATE=0.5

# User Experience
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_NOTIFICATION_TIMEOUT=5000

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_STALE_WHILE_REVALIDATE=60

# API Configuration
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_BASE_PATH=/api

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=3600

# Security Headers
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
NEXT_PUBLIC_CONTENT_SECURITY_POLICY=

# Third-party Integrations
NEXT_PUBLIC_ENABLE_GOOGLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MIXPANEL=false
NEXT_PUBLIC_ENABLE_AMPLITUDE=false

# Social Sharing
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_FACEBOOK_APP_ID=
NEXT_PUBLIC_TWITTER_HANDLE=@tributebattles

# Mobile Configuration
NEXT_PUBLIC_ENABLE_MOBILE_OPTIMIZATION=true
NEXT_PUBLIC_RESPONSIVE_BREAKPOINTS=sm:640,md:768,lg:1024,xl:1280

# Accessibility
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true
NEXT_PUBLIC_ENABLE_KEYBOARD_NAVIGATION=true

# Performance Optimization
NEXT_PUBLIC_ENABLE_CODE_SPLITTING=true
NEXT_PUBLIC_ENABLE_BUNDLE_ANALYZER=false

# Development Tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_HOT_RELOAD=true

# Testing
NEXT_PUBLIC_ENABLE_TESTING=false
NEXT_PUBLIC_TESTING_USER_ID=
