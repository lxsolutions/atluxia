# Truth Schemas Service Configuration

# Service Configuration
PORT=3011
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/polyverse

# NATS
NATS_URL=nats://nats:4222

# Vector Embeddings
EMBEDDING_MODEL=mock-embedding-v1
EMBEDDING_DIMENSIONS=512
SIMILARITY_THRESHOLD=0.7

# Schema Validation
MAX_CLAIM_LENGTH=1000
MAX_EVIDENCE_PER_CLAIM=20
MIN_CONFIDENCE_THRESHOLD=0.3

# Feature Flags
ENABLE_VECTOR_EMBEDDINGS=true
ENABLE_SCHEMA_VALIDATION=true
ENABLE_TRANSPARENCY_LOGS=true

# Logging
LOG_LEVEL=info