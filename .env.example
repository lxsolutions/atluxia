# Atluxia - Unified Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/atluxia"

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# =============================================================================
# PAYMENTS (Stripe)
# =============================================================================
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# =============================================================================
# STORAGE (S3/MinIO)
# =============================================================================
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="atluxia"
S3_REGION="us-east-1"

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# POLYVERSE SERVICES
# =============================================================================
# OpenGrid
OPENGRID_API_URL="http://localhost:3002"
OPENGRID_CONTRACT_ADDRESS="0x..."

# AI Router
AI_ROUTER_URL="http://localhost:8000"
OPENAI_API_KEY="your-openai-api-key"

# Relay
RELAY_URL="http://localhost:8080"
RELAY_JWT_SECRET="your-relay-jwt-secret"

# ActivityPub Bridge
ACTIVITYPUB_BRIDGE_URL="http://localhost:3004"

# Truth Services
TRUTH_AGENT_URL="http://localhost:3005"
TRUTH_GRAPH_URL="http://localhost:3006"

# =============================================================================
# NOMAD SERVICES
# =============================================================================
# Booking Service
BOOKING_API_URL="http://localhost:3007"

# Drivers Service
DRIVERS_API_URL="http://localhost:3008"

# Immigration Service
IMMIGRATION_API_URL="http://localhost:3009"

# Vehicles Service
VEHICLES_API_URL="http://localhost:3010"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ACTIVITYPUB_ENABLED="false"
FEATURE_AI_ROUTER_ENABLED="false"
FEATURE_TRUTH_ARCHIVE_ENABLED="true"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn"

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV="development"
DEBUG="atluxia:*"