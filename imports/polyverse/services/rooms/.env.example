# Rooms Service Configuration

# Service Configuration
PORT=3010
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/polyverse

# NATS
NATS_URL=nats://nats:4222

# Room Configuration
MAX_ROOMS_PER_USER=20
MAX_PARTICIPANTS_PER_ROOM=1000
DEFAULT_ROOM_TYPE=public

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS_PER_ROOM=500

# Moderation
MODERATION_LOG_RETENTION_DAYS=90
AUTO_MODERATION_ENABLED=false

# Feature Flags
ENABLE_ROOM_CREATION=true
ENABLE_MODERATION_TOOLS=true
ENABLE_TRANSPARENCY_LOGS=true

# Logging
LOG_LEVEL=info