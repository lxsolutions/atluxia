{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JuryVerdict",
  "type": "object",
  "properties": {
    "claimId": { "type": "string" },
    "panel": { 
      "type": "array", 
      "items": { 
        "type": "object",
        "properties": {
          "jurorId": { "type": "string" },
          "expertiseScore": { "type": "number", "minimum": 0, "maximum": 1 },
          "calibrationScore": { "type": "number", "minimum": 0, "maximum": 1 },
          "cluster": { "type": "string" }
        },
        "required": ["jurorId"]
      }
    },
    "rubricScores": { 
      "type": "object",
      "additionalProperties": { 
        "type": "array",
        "items": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "report": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "consensusLevel": { 
      "type": "string", 
      "enum": ["unanimous", "strong", "moderate", "weak", "divided"]
    },
    "created_at": { "type": "string", "format": "date-time" },
    "deliberation_duration_ms": { "type": "number" },
    "version": { "type": "integer", "minimum": 1 }
  },
  "required": [
    "claimId", "panel", "rubricScores", "report", "confidence", "created_at"
  ]
}