# Atluxia Monorepo Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# PostgreSQL Database
DATABASE_URL="postgresql://username:password@localhost:5432/atluxia"

# Redis
REDIS_URL="redis://localhost:6379"

# MinIO/S3 Storage
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="atluxia"
S3_REGION="us-east-1"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# JWT
JWT_SECRET="your-jwt-secret-key-here"

# =============================================================================
# NOMAD-LIFE SERVICES
# =============================================================================

# Booking Service
BOOKING_SERVICE_URL="http://localhost:3006"
BOOKING_SERVICE_PORT="3006"

# Drivers Service
DRIVERS_SERVICE_URL="http://localhost:3007"
DRIVERS_SERVICE_PORT="3007"

# Immigration Service
IMMIGRATION_SERVICE_URL="http://localhost:3008"
IMMIGRATION_SERVICE_PORT="3008"

# Vehicles Service
VEHICLES_SERVICE_URL="http://localhost:3009"
VEHICLES_SERVICE_PORT="3009"

# =============================================================================
# POLYVERSE SERVICES
# =============================================================================

# OpenGrid Service
OPENGRID_SERVICE_URL="http://localhost:3002"
OPENGRID_SERVICE_PORT="3002"

# AI Router Service
AI_ROUTER_SERVICE_URL="http://localhost:8000"
AI_ROUTER_SERVICE_PORT="8000"

# Relay Service
RELAY_SERVICE_URL="http://localhost:8080"
RELAY_SERVICE_PORT="8080"

# ActivityPub Bridge
ACTIVITYPUB_BRIDGE_URL="http://localhost:3004"
ACTIVITYPUB_BRIDGE_PORT="3004"

# =============================================================================
# EVERPATH SERVICES
# =============================================================================

# Everpath API
EVERPATH_API_URL="http://localhost:3100"
EVERPATH_API_PORT="3100"

# Everpath Data Service
EVERPATH_DATA_SERVICE_URL="http://localhost:3101"
EVERPATH_DATA_SERVICE_PORT="3101"

# =============================================================================
# CURIO-CRITTERS SERVICES
# =============================================================================

# Critters API
CRITTERS_API_URL="http://localhost:56456"
CRITTERS_API_PORT="56456"

# =============================================================================
# EXTERNAL APIS & INTEGRATIONS
# =============================================================================

# Stripe Payments
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# SendGrid Email
SENDGRID_API_KEY="your-sendgrid-api-key"

# Twilio SMS
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# Google Maps
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry
SENTRY_DSN="your-sentry-dsn"

# LogRocket
LOGROCKET_APP_ID="your-logrocket-app-id"

# PostHog
POSTHOG_API_KEY="your-posthog-api-key"
POSTHOG_HOST="https://app.posthog.com"

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Node Environment
NODE_ENV="development"

# Debug
DEBUG="atluxia:*"

# Feature Flags
FEATURE_ACTIVITYPUB_ENABLED="false"
FEATURE_AI_ROUTER_ENABLED="false"
FEATURE_TRUTH_ARCHIVE_ENABLED="false"

# =============================================================================
# APP-SPECIFIC VARIABLES
# =============================================================================

# Nomad Life Web App
NOMAD_WEB_PORT="3000"

# Polyverse Web App
POLYVERSE_WEB_PORT="3001"

# Everpath Web App
EVERPATH_WEB_PORT="3003"

# Everpath Admin
EVERPATH_ADMIN_PORT="3004"

# Critters Web App
CRITTERS_WEB_PORT="3005"

# Admin Dashboard
ADMIN_PORT="3010"